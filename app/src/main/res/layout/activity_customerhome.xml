                <TextView
                    android:id="@+id/textView8ID"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:text="Plumbing Services"
                    android:layout_marginStart="10dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/liLa3Id"
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:layout_marginTop="100dp"
                android:orientation="vertical">

                <ImageView

                    android:id="@+id/imageView3ID"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/drilling" />

                <TextView
                    android:id="@+id/textView3ID"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="Drilling Service"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/liLa6Id"
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView6ID"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
