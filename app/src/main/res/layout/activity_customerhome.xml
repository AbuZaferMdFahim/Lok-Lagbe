    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">


        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="100dp"
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:orientation="vertical"
                android:id="@+id/liLa1Id">

                <ImageView

                    android:id="@+id/imageView1ID"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/router"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:id="@+id/textView1ID"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="10dp"
                    android:text="Router Problem"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:orientation="vertical"
                android:id="@+id/liLa4Id">

                <ImageView
                    android:id="@+id/imageView4ID"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/acrepair"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:id="@+id/textView4ID"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:text="Ac Repair"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:orientation="vertical"
                android:id="@+id/liLa7Id">

                <ImageView
                    android:id="@+id/imageView7ID"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/electricservice"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:id="@+id/textView7ID"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:text="Electric Service"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="100dp"
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:orientation="vertical"
                android:id="@+id/liLa2Id">

                <ImageView

                    android:id="@+id/imageView2ID"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
